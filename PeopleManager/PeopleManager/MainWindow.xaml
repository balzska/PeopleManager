<Window x:Class="PeopleManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeopleManager"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="peopleButton" Content="People" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Height="39" Click="peopleButton_Click"/>
        <Grid x:Name="containerGrid" HorizontalAlignment="Left" Margin="90,10,0,10" Width="417"/>
        <Button x:Name="tablesButton" Content="Tables" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" Width="75" Height="39" Click="tablesButton_Click"/>
        <Button x:Name="settingsButton" Content="Settings" HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top" Width="75" Height="39" Click="settingsButton_Click"/>
        <Button x:Name="runButton" Content="Run" HorizontalAlignment="Left" Margin="10,270,0,0" VerticalAlignment="Top" Width="75" Height="39" Click="runButton_Click"/>
    </Grid>
</Window>
